<div class="container">
	<div class="row">
		<div class="col-md-6">
        <h3>Create Organization</h3>
        <div class="column">
            <table class="table">
                <%= form_tag("/create_organization", method: "post") do %>
                    <div class="form-group">
                        <h5>Name</h5>
                        <%= text_field_tag "Name", @organization.name, :class => "inline" %>
                        <h5>Name</h5>
                        <%= text_field_tag "AWS Key", @organization.aws_key, :class => "inline" %>
                        <h5>Name</h5>
                        <%= text_field_tag "AWS Secret", @organization.aws_secret, :class => "inline" %>
                    </div>
                    <%= submit_tag("Create Organization", :class => "btn btn-large btn-login right") %>
                <% end %>
            </table>
        </div>
    </div>
	</div>
</div>