              <h4>APIs Managed</h4>
              <span class="text-muted">Something else</span>
            </div>
            <div class="col-xs-6 col-sm-3 dash_placeholders">
              <div class="dashboard-info-circle text-center dinfo-color-alt">
                <h1>10</h1>
              </div>
              <!-- <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail"> -->
              <h4>Organization Members</h4>
              <span class="text-muted">Something else</span>
            </div>
            <div class="col-xs-6 col-sm-3 dash_placeholders">
              <div class="dashboard-info-circle text-center">
                <h1>10</h1>
              </div>
              <!-- <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail"> -->
              <h4>Contributions</h4>
              <span class="text-muted">Something else</span>
            </div>
            <div class="col-xs-6 col-sm-3 dash_placeholders">
              <div class="dashboard-info-circle text-center dinfo-color-alt">
                <h1>10</h1>
              </div>
              <!-- <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail"> -->
              <h4>API Views</h4>
              <span class="text-muted">Something else</span>
            </div>
          </div>

          <h2 class="sub-header">Your APIs</h2>
          <div class="table-responsive">
            <% if @apis.any? %>
            <table class="table dashboard-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Created</th>
                  <th>Last Updated</th>
                  <th>View Count</th>
                </tr>
              </thead>
              <tbody>
                <!-- <tr>
                  <td>Doxbox Mobile API</td>
                  <td>Owen</td>
                  <td>3</td>
                  <td>Doxbox</td>
                  <td>01-01-2017</td>
                </tr>
                <tr>
                  <td>Doxbox Mobile API</td>
                  <td>Owen</td>
                  <td>3</td>
                  <td>Doxbox</td>
                  <td>01-01-2017</td>
                </tr>
                <tr>
                  <td>Doxbox Mobile API</td>
                  <td>Owen</td>
                  <td>3</td>
                  <td>Doxbox</td>
                  <td>01-01-2017</td>
                </tr> -->
                <% @apis.each do |api| %>
                  <tr>
                    <td><%= api.name %></td>
                    <td><%= api.created_at %></td>
                    <td><%= api.updated_at %></td>
                    <% if api.view_count != nil %>
                    <td><%= api.view_count %></td>
                    <% else %>
                    <td>0</td>
                    <% end %>
                  </tr>
                <% end %>

              </tbody>
            </table>
            <% else %>
              <h2 class="text-center">You don't have any APIs</h2>
            <% end %>
          </div>
        </div>
      </div>
    </div>

